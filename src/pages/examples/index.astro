---
import Layout from "../../layouts/Layout.astro";
import { PageTitle } from "../../components/elements/PageTitle";
import type { BeforeAfter } from "../../types/beforeAfter";
import { getBeforeAfters } from "../../api/getBeforeAfter";
import { BeforeAfterImage } from "../../components/elements/BeforeAfterImage";

const beforeAfters: BeforeAfter[] = await getBeforeAfters();
---

<Layout
  title="まきゆう|子育てママの毎日をラクにする|整理収納アドバイザー|Example"
>
  <main
    class="mx-4 mt-2 flex-col items-center justify-center text-gray-700 lg:mx-40"
  >
    <PageTitle>Example</PageTitle>
    <aside class="flex flex-col items-center py-4 text-sm">
      <p>* モニターにご協力頂いたお客様のお写真です</p>
      <p>ご了承頂き掲載しております</p>
    </aside>
    <section class="flex flex-col items-center justify-center gap-4">
      {
        beforeAfters.map((ba) => (
          <>
            <div class="mt-4 flex gap-4">
              <BeforeAfterImage
                beforeImage={ba.beforeImage}
                afterImage={ba.afterImage}
              />
            </div>
            <div>
              {ba.place} / {ba.duration}
            </div>
            <div class="flex flex-col gap-1 text-sm sm:text-base">
              <Fragment set:html={ba.comment} />
            </div>
          </>
        ))
      }
    </section>
  </main>
</Layout>
