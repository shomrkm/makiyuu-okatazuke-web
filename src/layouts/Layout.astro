---
import 'normalize.css';
import '@fontsource/noto-sans-jp/400.css';
import '../styles/global.css';
import { Header } from '../components/header/Header';
import { Footer } from '../components/footer/Footer';

const SITE_URL = import.meta.env.PUBLIC_SITE_URL;

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="まきゆう|子育てママの毎日をラクにする|整理収納アドバイザー" />
    <meta property="og:title" content="makiyuu_okatazuke" />
    <meta property="og:type" content="website" />
    <meta
      property="og:description"
      content="まきゆう|子育てママの毎日をラクにする|整理収納アドバイザー"
    />
    <meta property="og:url" content={SITE_URL} />
    <meta name="google-site-verification" content="pSTXQqERjOm1fU1YEGrP8zi-Q2svRiGFRlprMc1D3-o" />
    <!-- <meta property="og:image" content="サムネイル画像のURL" /> -->
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 flex flex-col min-h-screen">
    <Header client:load />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Outfit&display=swap');
  @import '../styles/global.css';
  html {
    margin: 0;
  }
  body {
    height: 100%;
    font-family: 'Outfit', 'Noto Sans JP', sans-serif;
  }
</style>
